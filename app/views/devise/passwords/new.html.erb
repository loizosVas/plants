<!-- Forgot Password -->
<%= form_for(resource, as: resource_name, url: password_path(resource_name), html: { method: :post }) do |f| %>
  <%= render "devise/shared/error_messages", resource: resource %>

	<div class="card">
	  <div class="card-header">
	    <h4>Forgot your password?</h4>
	  </div>
	  <div class="card-body">
	      <div class="field form-group mb-3">
	        <%= f.email_field :email, autofocus: true, autocomplete: "email", class:"form-control", placeholder:"Email", required:true %>
	      </div>

    	  <div class="actions">
	        <%= f.submit "Send me reset password instructions", class:"btn btn-danger", :style => 'width: -webkit-fill-available' %>
	  	  </div>
	  </div>
	</div>
<% end %>
<%= render "devise/shared/links" %>