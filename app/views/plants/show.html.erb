<div class="p-5 mb-4 bg-light rounded-3">
  <h1 class="display-4"><%= @plant.plant_name %></h1>

  <p>
    <strong>Temperature:</strong>
    <%= @plant.temperature %>
  </p>

  <p>
    <strong>Humidity:</strong>
    <%= @plant.humidity %>
  </p>

  <p>
    <strong>Water:</strong>
    <%= @plant.water %>
  </p>

  <p>
    <strong>Soil:</strong>
    <%= @plant.soil %>
  </p>

  <p>
    <strong>Light:</strong>
    <%= @plant.light %>
  </p>

  <p>
    <strong>Location:</strong>
    <%= @plant.location %>
  </p>




  <br>
  <%= link_to 'Edit', edit_plant_path(@plant), class:"btn btn-secondary" %>
  <%= link_to 'Back', plants_path, class:"btn btn-dark" %>
</div>
